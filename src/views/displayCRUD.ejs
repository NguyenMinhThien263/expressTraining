<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <link content-type="text/css" rel="stylesheet" href="/css/displayCRUD.css">
    <%- include('../views/bootstrap'); %>
</head>

<body>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            <% dataTable.forEach(function (item){%>
                <tr>
                    <th scope="row">
                        <%= item.id %>
                    </th>
                    <td>
                        <%= item.email %>
                    </td>
                    <td>
                        <%= item.firstName %>
                    </td>
                    <td>
                        <%= item.lastName %>
                    </td>
                    <td>
                        <%= item.address %>
                    </td>
                    <td>
                        <a href="/edit-crud?id=<%= item.id %>" class="btn-edit">Edit</a>
                        <a href="/del-crud?id=<%= item.id %>" class="btn-del">Delete</a>
                    </td>
                </tr>
                <% });%>
        </tbody>
    </table>
</body>

</html>